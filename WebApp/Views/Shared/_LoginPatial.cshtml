@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Identity
@using Data.Entities
@*@model ViewModels.System.Users.UserViewModel*@
@inject UserManager<AppUser> UserManager
@inject SignInManager<AppUser> SignInManager
@{
    var username = ViewBag.Name;
    var displayName = ViewBag.User;
}

<ul class="navbar-nav float-right">
    <li class="nav-item dropdown">
        @* @if (username != null)*@
        @if (SignInManager.IsSignedIn(User))
        {
            <a class="nav-link dropdown-toggle text-white" id="userDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-user fa-fw"></i>Konnichiwa, @UserManager.GetUserName(User)!
                @*@User.Identity.Name*@
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                <a class="dropdown-item" asp-area="" asp-controller="Users" asp-action="Profile">Cá nhân</a>
                <div class="dropdown-divider"></div>
                <form method="post" asp-controller="Users" asp-action="Logout">
                    <button type="submit" class="dropdown-item">Logout</button>
                </form>
            </div>
        }
        else
        {
            <a class="nav-link dropdown-toggle text-white" id="userDropdown" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-user fa-fw text-white"></i>
            </a>

            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                @*<a class="dropdown-item" href="/dang-nhap">Đăng Nhập</a>*@
                <a class="dropdown-item" asp-controller="Users" asp-action="Login">Đăng Nhập</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="/dang-ky">Đăng Kí</a>
            </div>
        }

    </li>
</ul>