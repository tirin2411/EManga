@using Microsoft.AspNetCore.Http;
@using ViewModels.Catalog.Cart
@using Microsoft.AspNetCore.Mvc;
@{
    var cart = (List<CartItem>)ViewBag.cart;
    //var session = HttpContext.Session.Get<List<int>>("giohang");
}

@if (cart == null || cart.Count == 0)
    {
        <a class="nav-link text-dark mr-auto" href="/gio-hang">
            <i class="fas fa-shopping-cart"></i>
        </a>
    }
    else
    {
        <a class="nav-link text-dark mr-auto" href="/gio-hang">
            <i class="fas fa-shopping-cart"></i>(@cart.Count)
        </a>
    }
